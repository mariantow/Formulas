<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:id="@+id/imageView5"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/uno" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Introduzca las variables y deje vacio el cuadro de la variable que quiere consultar"
        android:id="@+id/textView7"
        android:layout_gravity="center_horizontal"
        android:textSize="25dp"
        android:textColor="#ff3969ac"
        android:gravity="center_horizontal" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Kmax="
            android:id="@+id/textView8"
            android:layout_marginLeft="101dp"
            android:layout_marginStart="101dp"
            android:textColor="#ff000000"
            android:textSize="30dp"
            android:layout_alignTop="@+id/textView9"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText_Kmax"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView8"
            android:textSize="30dp"
            android:textColor="#ff000000"
            android:shadowColor="#ff555aff"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="J"
            android:id="@+id/textView9"
            android:textColor="#ff000000"
            android:textSize="30dp"
            android:layout_alignBottom="@+id/editText_Kmax"
            android:layout_toRightOf="@+id/editText_Kmax"
            android:layout_toEndOf="@+id/editText_Kmax" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="V="
            android:id="@+id/textView10"
            android:textColor="#ff000000"
            android:textSize="30dp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_below="@+id/textView8"
            android:layout_toLeftOf="@+id/editText_Kmax"
            android:layout_toStartOf="@+id/editText_Kmax" />

        <EditText
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText_Kmax"
            android:textSize="30dp"
            android:textColor="#ff000000"
            android:shadowColor="#ff555aff"
            android:gravity="center_horizontal"
            android:layout_alignBottom="@+id/textView10"
            android:layout_toRightOf="@+id/textView8"
            android:layout_toEndOf="@+id/textView8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="V"
            android:id="@+id/textView11"
            android:textColor="#ff000000"
            android:textSize="30dp"
            android:layout_below="@+id/textView9"
            android:layout_toRightOf="@+id/editText_Kmax"
            android:layout_toEndOf="@+id/editText_Kmax" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/textView_variables"
            android:textColor="#ff000000"
            android:textSize="20dp"
            android:text="Kmax: energia cinetica maxima \n e: carga del electron \n V: diferencia de potencial o potencial de frenado"
            android:layout_below="@+id/textView10"
            android:gravity="center_horizontal" />




    </RelativeLayout>


</LinearLayout>